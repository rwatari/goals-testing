<!DOCTYPE html>
<html>
<head>
  <title>GoalsApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <% if logged_in? %>
      Welcome <%= current_user.username %>!
      <br>
      <%= button_to "Sign Out", session_url, method: :delete %>
    <% end %>
  </header>

<%= yield %>

</body>
</html>
