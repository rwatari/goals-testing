<h1>Add a Goal</h1>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>

  <label>Content
    <br>
    <textarea name="goal[content]" rows="8" cols="80"></textarea>
  </label>

  <br>

  <label>Private?
    <input type="checkbox" name="goal[private]" value="true">
  </label>

  <br>

  <input type="submit" name="" value="Add a Goal">
</form>
